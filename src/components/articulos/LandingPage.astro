---
const {contenido = 'article', autor, titulo, ciencia, fecha, duracion} = Astro.props
---

<a class="group w-[18%]" href="/mi-articulo" id={contenido}>
    <div class="bg-principal-black group-hover:scale-110 rounded-lg transition-all relative w-full">
        <img src="/images/contenido/la-idea-de-eratostenes/imagen-de-portada.webp" class="w-full rounded-lg h-40 image">
        <div class="absolute top-0 bottom-0 w-full h-full items-center justify-center play">
            <svg width="96" height="96" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path fill="#f2f2f2" d="M21.409 9.353a2.998 2.998 0 0 1 0 5.294L8.597 21.614C6.534 22.736 4 21.276 4 18.968V5.033c0-2.31 2.534-3.769 4.597-2.648l12.812 6.968Z"/>
            </svg>
        </div>
    </div>
    <h6 class="text-dark-math font-medium mt-4 dark:text-light-math uppercase">
        {ciencia}
    </h6>
    <h2 class="text-[1.3rem] font-medium text-principal-black dark:text-principal-white">
        La inteligencia artificial en la Olimpiada Matemática
    </h2>
    <footer>
        <div class="flex gap-x-1 text-dark-gray dark:text-light-gray metadata-article">
            <p>Autor</p>
            <p>·</p>
            <p>3 agosto, 2023</p>
        </div>
        <div class="hidden text-dark-gray dark:text-light-gray metadata-video">
            <p>Duración: 21:09</p>
        </div>
    </footer>
</a>

<style>
    #video{
        .image{
            opacity:40%;
        }
        .play{
            display:flex;
        }
        .metadata-article{
            display:flex;
        }
        .metadata-video{
            display:none;
        }
    }

    #article{
        .image{
            opacity:100%;
        }
        .play{
            display:none;
        }
        .metadata-article{
            display:none;
        }
        .metadata-video{
            display:inline;
        }
}
</style>