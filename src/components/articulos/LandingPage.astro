---
const {contenido = 'article', autor, titulo, ciencia, fecha, duracion} = Astro.props
---

<a class="group w-[18%]" href="/mi-articulo">
    <div class="bg-principal-black group-hover:scale-110 rounded-lg transition-all relative w-full">
        <img id="image" src="/images/contenido/la-idea-de-eratostenes/imagen-de-portada.webp" class="w-full rounded-lg h-40 opacity-60">
        <div id="play" class="absolute top-0 bottom-0 w-full h-full items-center justify-center hidden">
            <svg width="96" height="96" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path fill="#f2f2f2" d="M21.409 9.353a2.998 2.998 0 0 1 0 5.294L8.597 21.614C6.534 22.736 4 21.276 4 18.968V5.033c0-2.31 2.534-3.769 4.597-2.648l12.812 6.968Z"/>
            </svg>
        </div>
    </div>
    <h6 class="text-dark-math font-medium mt-4 dark:text-light-math uppercase">
        {ciencia}
    </h6>
    <h2 class="text-[1.3rem] font-medium text-principal-black dark:text-principal-white">
        La inteligencia artificial en la Olimpiada Matemática
    </h2>
    <footer>
        <div id="article" class="flex gap-x-1 text-dark-gray dark:text-light-gray">
            <p>Autor</p>
            <p>·</p>
            <p>3 agosto, 2023</p>
        </div>
        <div id="video" class="hidden text-dark-gray dark:text-light-gray">
            <p>Duración: 21:09</p>
        </div>
    </footer>
    <div id="contenedor" data-type={contenido}/>
    <astro-greet data-content={contenido}>
    </astro-greet>
</a>

<script>
    class AstroGreet extends HTMLElement {
      constructor() {
        super();
        let content = this.dataset.content;
        console.log(content)
        const play = document.querySelector("#play") as HTMLElement;
        const image = document.querySelector("#image") as HTMLElement;
        const article = document.querySelector("#article") as HTMLElement;
        const video = document.querySelector("#video") as HTMLElement;
        if (content === "video"){
            console.log("true");
            play.style.display="flex";
            article.style.display="none";
            video.style.display="inline";
        }
      }
    }
    customElements.define('astro-greet', AstroGreet);
</script>