---
import katex from 'katex';
const { formula='' } = Astro.props;
const html = katex.renderToString(formula, {output: 'mathml', throwOnError: false});
---
<span class="text-center inline align-baseline m-0 p-0">
    <span set:html={html} class=""/>
</s>
