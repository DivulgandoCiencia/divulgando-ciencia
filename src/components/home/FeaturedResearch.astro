---
import Icon from "../ui/Icons.astro";
import Button from '../ui/Button.astro';
import FeaturedArticleCard from './FeaturedArticleCard.astro';
import { clientTranslations } from '../../i18n';
const lang = Astro.locals.lang;
const t = clientTranslations[lang];

const { articles = [] } = Astro.props;
---

<section class="container px-4 py-12 md:px-6 relative">
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4 relative z-10">
        <div>
            <h2 class="text-2xl font-bold tracking-tight">{t.home.featuredResearch.title}</h2>
            <p class="text-muted-foreground">{t.home.featuredResearch.subtitle}</p>
        </div>
        <div class="flex items-center gap-2">
            <a href="/articles">
                <Button variant="outline" size="sm" className="h-8">
                    {t.home.featuredResearch.viewAll}
                </Button>
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 relative z-10">
        {articles.map(article => (
            <FeaturedArticleCard
                slug={article.slug}
                body={article.body}
                title={article.title}
                description={article.description}
                author={article.author}
                authors={article.authors}
                date={article.date}
            />
        ))}
    </div>
</section>

