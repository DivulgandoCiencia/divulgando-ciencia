---
import PrincipalLayout from "./PrincipalLayout.astro";
const{frontmatter} = Astro.props;
---

<PrincipalLayout title={frontmatter.title}>
    <section class="w-full text-center m-auto px-64 text-principal-black dark:text-principal-white">
        <h4 class="font-medium uppercase" id={frontmatter.ciencia}>{frontmatter.ciencia}</h4>
        <h1 class="font-bold text-5xl leading-[3.25rem] dark:text-princi">{frontmatter.titulo}</h1>
        <section class="flex w-fit m-auto my-4 gap-x-3">
            <img alt="Foto de perfil del autor de esta entrada" class="w-12 h-12 object-cover rounded-full" src="/images/autores/dotero.jpg">
            <div class="flex-col text-left font-normal ">
                <h4 class="font-medium">{frontmatter.autor}</h4>
                <ul class="flex gap-x-1">
                    <li>{frontmatter.fecha}</li>
                    ·
                    <li>{frontmatter.duracion} min de lectura</li>
                </ul>
            </div>
        </section>
        <img alt={frontmatter.portadaAlt} class="w-full h-96 object-cover rounded-lg my-5" src="/images/landing-page/portada.webp"/>
    </section> 
    <section class="w-full justify-center flex">
        <article class="prose dark:prose-invert ">
            <slot></slot>
        </article>
    </section>
</PrincipalLayout>

<style>
    #matemáticas{
        color:#004193;
    }
    #biología{
        color:#005100;
    }
    #geología{
        color:#6E3400;
    }
    #física{
        color:#950000;
    }
    #química{
        color:#820083;
    }
    #tecnología{
        color:#623B00;
    }
    #programación{
        color:#5a12b0;
    }
    #científicos{
        color:#004f3e;
    }
    :is(.dark #matemáticas) {
        color:#a8c6e3
    }
    :is(.dark #biología) {
        color:#64db62
    }
    :is(.dark #geología) {
        color:#e2bba5
    }
    :is(.dark #física) {
        color:#ffaaa2
    }
    :is(.dark #química) {
        color:#ff99ff
    }
    :is(.dark #tecnología) {
        color:#f2ba48
    }
    :is(.dark #programación) {
        color:#e9aaff
    }
    :is(.dark #científicos) {
        color:#16dac0
    }
</style>