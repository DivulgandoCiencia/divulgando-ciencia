---
import Bandera from "@/components/Bandera.astro";
import Layout from "@/layouts/LayoutNoFooter.astro";
import ModoClaroOscuro from "@/components/ModoClaroOscuro.astro";
const {texto, idioma} = Astro.props
let inicio = "/"
if (idioma != "es"){
    inicio = "/" + idioma
}
---

<Layout title={texto}>
    <header class="justify-between items-center px-12 md:px-24 py-8 flex gap-x-2">
        <a class="hover:scale-110 transition-all" href={inicio}>
            <img alt="Logo de divulgandociencia.com" src="/images/logo-modo-oscuro.webp" class="h-8 md:h-12 2xl:h-16 modo-oscuro"/>
            <img src="/images/logo-modo-claro.webp" alt="Logo de divulgandociencia.com" class="h-8 md:h-12 2xl:h-16 modo-claro"/>
        </a>
        <h1 class="text-principal-black dark:text-principal-white font-generalsans-semibold text-xl md:text-3xl lg:text-4xl xl:text-5xl">{texto}</h1>
        <ModoClaroOscuro class="flex flex-grow basis-0"/>
    </header>
    <main class="px-16 md:px-24 grid gap-12 grid-cols-1 grid-rows-6 md:grid-cols-2 md:grids-rows-3 lg:grid-cols-3 lg:grid-rows-2">
        <Bandera url="/" src="/images/banderas/espana.webp"/>
        <Bandera url="/en" src="/images/banderas/reino-unido.webp"/>
        <Bandera url="/fr" src="/images/banderas/francia.webp"/>
        <Bandera url="/ca" src="/images/banderas/cataluna.webp"/>
        <Bandera url="/eu" src="/images/banderas/pais-vasco.webp"/>
        <Bandera url="/gl" src="/images/banderas/galicia.webp"/>
    </main>
</Layout>

<style>
    .modo-oscuro{
        display:none;
    }
    :is(.dark header){
        .modo-oscuro{
            display:block;
        }
        .modo-claro{
            display: none;
        }
    }
</style>