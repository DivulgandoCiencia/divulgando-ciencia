---
import jovenesCientificos from '@/json/jovenes-cientificos.json';
import PrincipalLayout from '@/layouts/PrincipalLayout.astro';

export async function getStaticPaths() {
  return jovenesCientificos.jovenes_cientificos.map(cientifico => ({
    params: { cientifico: cientifico.slug }
  }));
  
}

// Obtener el slug desde los parámetros
const slug = Astro.params.cientifico;

// Buscar el científico correspondiente
const cientifico = jovenesCientificos.jovenes_cientificos.find(c => c.slug === slug);
if (!cientifico) {
  throw new Error(`Científico no encontrado para slug: ${slug}`);
}

const title = `${cientifico.nombre} | Divulgando Ciencia`;
const image = "/images/jovenes-cientificos/" + slug + ".webp";
---

<PrincipalLayout 
    {title}
    description={cientifico.descripcion}
    {image}
>
    <main class="mt-20 w-full justify-center m-auto px-8 sm:px-32 lg:px-40 xl:px-64 text-principal-black dark:text-principal-white font-generalsans text-left flex gap-x-8">
      <section class="w-1/2">
        <img transition:name="autor" src={image} class="w-96 rounded"/>
      </section>
      <section class="w-fit">
        <h2 class="text-4xl font-generalsans-medium">
          {cientifico.nombre}
        </h2>
        <h4 class="text-lg my-2">{cientifico.descripcion}</h4>
        <p class="text-lg my-4 text-wrap">{cientifico.biografia}</p>
        <a href=`mailto:${cientifico.email}` class="flex gap-x-2 items-center">
