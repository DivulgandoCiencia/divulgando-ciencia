---
import Layout from "../layouts/Layout.astro";
---
<Layout lang="es" footer="false">
    <link href="/_pagefind/pagefind-ui.css" rel="stylesheet">
    <script src="/_pagefind/pagefind-ui.js" type="text/javascript"></script>
    <div id="search"></div>
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            new PagefindUI({ element: "#search",
             showSubResults: true,
             translations: {
                placeholder: "¿Qué quieres aprender hoy?",
                clear_search: "Limpiar búsqueda",
                load_more: "Ver más resultados",
                search_label: "Buscar en este sitio",
                filters_label: "Filtros",
                zero_results: "No se han encontrado resultados para [SEARCH_TERM]",
                many_results: "Se han encontrado [COUNT] resultados para [SEARCH_TERM]",
                one_result: "Se ha encontrado un resultado para [SEARCH_TERM]",
                alt_search: "No se han encontrado resultados para [SEARCH_TERM]. Mostrando resultados para [DIFFERENT_TERM]",
                search_suggestion: "No se han encontrado resultados para [SEARCH_TERM]. Prueba alguna de las siguientes búsquedas:",
                searching: "Buscando para [SEARCH_TERM]..."
             } 
            });
        });
    </script>
</Layout>